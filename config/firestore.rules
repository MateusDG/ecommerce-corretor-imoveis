rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Public readable content
    match /features/{doc} {
      allow read: if true;
      allow write: if request.auth != null; // tighten for prod
    }
    match /property_types/{doc} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /properties/{doc} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /settings/{doc} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Default: allow public read, block writes
    match /{document=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}

